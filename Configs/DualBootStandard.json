{
  "metadata": {
    "name": "Dual Boot - Standard Kernel",
    "description": "Dual-boot with existing Windows (UEFI) using standard kernel",
    "author": "PCMR",
    "version": "1.0.0"
  },
  "system": {
    "default_username": "",
    "default_hostname": "arch-z13",
    "default_timezone": "UTC",
    "locale": "en_US.UTF-8"
  },
  "installation": {
    "dual_boot_mode": "gpt",
    "kernel_variant": "standard",
    "default_filesystem": "btrfs",
    "default_desktop": "omarchy",
    "enable_gaming": false,
    "enable_snapshots": true,
    "enable_secure_boot": true,
    "enable_suspend_resume": true,
    "enable_hibernate": true
  },
  "power": {
    "enable_power_management": true,
    "enable_tlp": true,
    "enable_asusctl": true,
    "tdp_profiles": {
      "efficient": 7,
      "balanced": 45,
      "performance": 65,
      "maximum": 85
    }
  },
  "hardware": {
    "enable_hardware_fixes": true,
    "enable_wifi_stability_fixes": true,
    "enable_audio_firmware": false,
    "enable_touchpad_fixes": true
  },
  "recovery": {
    "enable_error_recovery": true,
    "enable_filesystem_fallback": true,
    "enable_fresh_reinstall": true
  }
}

